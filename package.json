{
  "name": "aivo-platform",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.19.4",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "pnpm": {
    "overrides": {
      "@stripe/react-stripe-js>react": "^19.0.0",
      "@stripe/react-stripe-js>react-dom": "^19.0.0",
      "@storybook/react-vite>vite": "^7.0.0",
      "@storybook/builder-vite>vite": "^7.0.0",
      "@joshwooding/vite-plugin-react-docgen-typescript>vite": "^7.0.0",
      "vite": "npm:rolldown-vite@7.1.14"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19",
        "vite": "7"
      }
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
