{
  "name": "@aivo/aivo-brain",
  "version": "1.0.0",
  "description": "Core AI orchestrator for the Aivo educational platform",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./chains": {
      "types": "./dist/chains/index.d.ts",
      "import": "./dist/chains/index.js"
    },
    "./capabilities": {
      "types": "./dist/capabilities/index.d.ts",
      "import": "./dist/capabilities/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@aivo/types": "workspace:*",
    "@anthropic-ai/sdk": "^0.27.3",
    "@google/generative-ai": "^0.21.0",
    "@langchain/anthropic": "^0.3.7",
    "@langchain/community": "^0.3.10",
    "@langchain/core": "^0.3.15",
    "@langchain/google-genai": "^0.1.0",
    "@langchain/openai": "^0.3.9",
    "langchain": "^0.3.5",
    "openai": "^4.68.4",
    "replicate": "^0.34.1",
    "zod": "^3.23.8",
    "node-fetch": "^3.3.2",
    "p-retry": "^6.2.0",
    "p-queue": "^8.0.1",
    "p-timeout": "^6.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.19.4"
  },
  "keywords": [
    "ai",
    "education",
    "llm",
    "langchain",
    "orchestrator",
    "multi-provider"
  ]
}