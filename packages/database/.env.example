# Database Configuration
# Copy this file to .env and update the values for your environment

# PostgreSQL Database URL
# Format: postgresql://username:password@localhost:5432/database_name?schema=public
DATABASE_URL="postgresql://aivo_user:aivo_password@localhost:5432/aivo_dev?schema=public"

# Alternative formats:
# Local development with Docker:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aivo_dev?schema=public"

# Production example (use environment-specific values):
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public&sslmode=require"

# Prisma Configuration
# Enable Prisma Studio on custom port
PRISMA_STUDIO_PORT=5555

# Shadow database for migrations (optional)
# SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/aivo_dev_shadow?schema=public"