{
  "name": "@aivo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir src --exclude src/tests/integration",
    "test:integration": "node src/tests/run-tests.js",
    "test:integration:coverage": "node src/tests/run-tests.js --coverage",
    "test:integration:verbose": "node src/tests/run-tests.js --verbose",
    "test:integration:sequential": "node src/tests/run-tests.js --sequential",
    "test:focus": "node src/tests/run-tests.js --suite 'Focus Guardian'",
    "test:homework": "node src/tests/run-tests.js --suite 'Homework Helper'",
    "test:writing": "node src/tests/run-tests.js --suite 'Writing Pad'",
    "test:websocket": "node src/tests/run-tests.js --suite 'WebSocket'",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "docker:build": "docker build -t aivo-api .",
    "docker:run": "docker run -p 3000:3000 aivo-api"
  },
  "dependencies": {
    "@aivo/auth": "workspace:*",
    "@aivo/database": "workspace:*",
    "@aivo/types": "workspace:*",
    "@hono/node-server": "^1.13.1",
    "@hono/zod-validator": "^0.4.1",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.78.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "hono": "^4.6.7",
    "hono-pino": "^0.6.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pino": "^9.5.0",
    "pino-pretty": "^12.0.0",
    "prisma": "^5.22.0",
    "stripe": "^17.3.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.19.4"
  }
}